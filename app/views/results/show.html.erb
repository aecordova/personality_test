  <div class="container p-1 text-light">
    <div class="row flex-lg-row-reverse align-items-center justify-content-center g-5 py-5 main-container">
      <div class="col-10">
        <div class="text-center mb-4">
          <div class="display-3 fw-bold lh-1 mb-3"><%= @result.test.title %></div>
          <div class='h4 text-center'>Test Results</div>
        </div>
        <div class="border border-outline rounded p-4 mb-4">
          <div class="row mb-4">
            <div class='col-2 h5'>Name: </div>
            <div class='col-10 h1 text-center'><%= @result.responder.name %> </div>
          </div>
          <div class="row mb-2">
            <div class='col-2 h5'>Score: </div>
            <div class='col-10 h4 text-center'><%= @result.score %>  </div>
          </div>
          <div class="row mb-2">
            <div class='col-2 h5'>Out of: </div>
            <div class='col-10 h4 text-center'><%= @result.test.calculation.max_possible_score %>  </div>
          </div>
          <div class="row mb-2">
            <div class='col-2 h5'>Percentage: </div>
            <div class='col-10 h4 text-center mb-4'><%= @result.percent_result %> %</div>
          </div>
          <div class="row mb-2">
            <span class="col-2 h5"> Result: </span>
            <span class="col-10 h2 text-center"> <%= @result.result %></span>
          </div>
        </div>
      </div>
    </div>
  </div>
