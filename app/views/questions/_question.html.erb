<div class="row d-flex justify-content-center p-2">
  <div class="card rounded border-secondary bg-transparent col-1 d-flex justify-content-center">
    <span class="h5 text-center"><%= index %></span>
  </div> 
  <div class="ms-2 card rounded border-secondary border-left-0 bg-transparent col-8">
    <div class="card-body">
      <h5 class="card-title"><%= question.caption %></h5>
      <div class="row py-2">
        <% question.choices.each_with_index do |choice, choice_index| %>
          <%= render 'questions/question_choice', 
                question: question, 
                choice: choice, 
                choice_index: choice_index %>
        <% end %>
      </div>
    </div>
  </div>
</div>